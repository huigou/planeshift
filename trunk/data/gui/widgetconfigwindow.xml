<widget_description>

<widget name="Window Settings" factory="widgetconfigwindow" 
        visible="yes" savepositions="no" movable="yes" 
        resizable="no" >

    <frame x="200" y="200" width="300" height="155" border="yes" />
    <minframe width="300" height="135" />  <!-- size without font option -->
    <maxframe width="300" height="155" />  <!-- size with font option -->

    <title resource="Blue Title" text="Window Settings" align="left" close_button="yes" />
    <bgimage resource="Standard Background" alpha="50" />

    <!-- Min Alpha scrollbar -->
    <widget name="MinAlphaScroll" factory="pawsScrollBar" direction="horizontal" >
        <frame x="140" y="30" width="100" height="15" border="no" />
    </widget>

    <!-- Min Alpha progressbar-->
    <widget name="MinAlphaProgressBar" factory="pawsProgressBar">
        <frame x="155" y="35" width="65" height="7" border="no" />
        <color     r="0" g="50" b="0" />
        <fadecolor r="0" g="255" b="0" />
    </widget>

    <!-- Min Alpha Current % -->
    <widget name="MinAlphaCurrentPct" factory="pawsTextBox">
        <frame x="245" y="33" width="40" height="20" border="no"/>
        <text string="100%" />
    </widget>

    <!-- Min Alpha -->
    <widget name="MinAlphaText" factory="pawsTextBox">
        <frame x="10" y="33" width="140" height="20" border="no"/>
        <text string="Min. Transparency:" />
    </widget>

    <!-- Max Alpha scrollbar -->
    <widget name="MaxAlphaScroll" factory="pawsScrollBar" direction="horizontal" >
        <frame x="140" y="12" width="100" height="15" border="no" />
    </widget>

    <!-- Max Alpha progressbar-->
    <widget name="MaxAlphaProgressBar" factory="pawsProgressBar">
        <frame x="155" y="17" width="65" height="7" border="no"/>
        <color     r="0" g="0" b="50" />
        <fadecolor r="0" g="0" b="255" />
    </widget>

    <!-- Max Alpha 100% -->
    <widget name="MaxAlphaCurrentPct" factory="pawsTextBox">
        <frame x="245" y="15" width="40" height="20" border="no"/>
        <text string="100%" />
    </widget>

    <!-- Max Alpha -->
    <widget name="MaxAlphaText" factory="pawsTextBox">
        <frame x="10" y="13" width="140" height="20" border="no"/>
        <text string="Max. Transparency:" />
    </widget>


    <!-- FadeSpeed scrollbar -->
    <widget name="FadeSpeedScroll" factory="pawsScrollBar" direction="horizontal" >
        <frame x="140" y="50" width="100" height="15" border="no" />
    </widget>

    <!-- FadeSpeed progressbar-->
    <widget name="FadeSpeedProgressBar" factory="pawsProgressBar" >
        <frame x="155" y="55" width="65" height="7" border="no" />
        <color     r="50" g="0" b="0" />
        <fadecolor r="255" g="0" b="0" />
    </widget>

    <!-- FadeSpeed 100% -->
    <widget name="FadeSpeedCurrentPct" factory="pawsTextBox">
        <frame x="245" y="53" width="40" height="20" border="no"/>
        <text string="100%" />
    </widget>

    <!-- FadeSpeed-->
    <widget name="FadeSpeedText" factory="pawsTextBox">
        <frame x="10" y="53" width="100" height="20" border="no"/>
        <text string="Fade Speed:" />
    </widget>


   <!-- Fade Button-->
    <widget name="FadeButton" factory="pawsButton" toggle="no"  shadows="no" toggle="no">
        <frame x="130" y="75" width="10" height="10" border="no" />
        <buttonup resource="radiooff" />
        <buttondown resource="radioon" />
    </widget>

    <!-- Fade Status -->
    <widget name="FadeStatus" factory="pawsTextBox">
        <frame x="145" y="73" width="80" height="20" border="no"/>
        <text string="Enabled" />
    </widget>
 
    <!-- FadeText -->
    <widget name="FadeText" factory="pawsTextBox">
        <frame x="10" y="73" width="60" height="20" border="no"/>
        <text string="Fading:" />
    </widget>


    <!-- Font scaling scrollbar -->
    <widget name="FontScalingScroll" factory="pawsScrollBar" direction="horizontal" >
        <frame x="140" y="90" width="100" height="15" border="no" />
    </widget>

    <!-- Font scaling progressbar-->
    <widget name="FontScalingProgressBar" factory="pawsProgressBar" >
        <frame x="155" y="95" width="65" height="7" border="no" />
        <color     r="50" g="50" b="0" />
        <fadecolor r="255" g="255" b="0" />
    </widget>

    <!-- Font scaling 100% -->
    <widget name="FontScalingCurrentPct" factory="pawsTextBox">
        <frame x="245" y="93" width="40" height="20" border="no"/>
        <text string="100%" />
    </widget>

    <!-- Font scaling-->
    <widget name="FontScalingText" factory="pawsTextBox">
        <frame x="10" y="93" width="100" height="20" border="no"/>
        <text string="Font Scaling:" />
    </widget>


    <!-- OK button -->
    <widget name="OKButton" factory="pawsButton" toggle="no" shadows="yes">
        <frame x="10" y="120" width="80" height="20" border="yes" />
        <buttonup resource="Blue Title"/>
        <buttondown resource="Blue Title" />
        <attachpoints>
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
        <label text="OK"/>
    </widget>


   <!-- Cancel button -->
    <widget name="CancelButton" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="110" y="120" width="80" height="20" border="yes" />
        <buttonup resource="Blue Title" />
        <buttondown resource="Blue Title" />
        <attachpoints>
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
        <label text="Cancel"/>
   </widget>
   
   <!-- Apply to all button -->
    <widget name="ApplyAllButton" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="210" y="120" width="80" height="20" border="yes" />
        <buttonup resource="Blue Title" />
        <buttondown resource="Blue Title" />
        <attachpoints>
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
        <label text="Apply to all"/>
    </widget>
</widget>

</widget_description>

