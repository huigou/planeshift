<widget_description>

<widget name="ConfigPvPTree" factory="pawsConfigPvP"
        visible="no" savepositions="no" movable="no" 
        resizable="no" style="New Standard GUI" >
	<frame x="225" y="10" width="400" height="300" border="no" />
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="200" g="200" b="200" size="10" scalefont="no" />

            <widget name="confirm" factory="pawsRadioButtonGroup">
            <frame x="180" y="100" width="190" height="120" />
            <widget factory="pawsTextBox" name="">
                <frame x="0" y="0" width="180" height="20" border="no" />
                <text string="Confirmation upon PvP duel:"/>
            </widget>
                <widget name="ConfirmNever" factory="pawsRadioButton" id="0" >
                    <frame x="0" y="20" width="180" height="20" />
                    <text string="Never accept" position="right" />
                </widget>
                <widget name="ConfirmConfirm" factory="pawsRadioButton" id="1" >
                    <frame x="0" y="50" width="180" height="20" />
                    <text string="Confirm each time" position="right" />
                </widget>
                <widget name="ConfirmAlways" factory="pawsRadioButton" id="2" >
                    <frame x="0" y="80" width="180" height="20" />
                    <text string="Always accept" position="right" />
                </widget>
            </widget>

</widget>

</widget_description>

