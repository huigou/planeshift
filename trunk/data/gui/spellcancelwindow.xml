<widget_description>

<widget name="SpellCancelWindow" factory="pawsSpellCancelWindow" 
        visible="yes" savepositions="yes" movable="yes" resizable="no" >
        
    <frame x="0" y="200" width="170" height="94" border="yes" />
    <title resource="Blue Title" text="Spell casting" align="left" />
    <bgimage resource="Spell Cancel" alpha="200" />

    <!-- Spell Progress -->
    <widget name="SpellProgress" factory="pawsProgressBar">
        <frame x="17" y="23" width="136" height="6" border="no" />
        <color     r="0" g="0" b="50" />
        <fadecolor r="0" g="0" b="255" />
    </widget>

    <!-- Cancel button -->
    <widget name="Cancel" factory="pawsButton" id="100">
        <frame x="55" y="60" width="60" height="24" border="no"/>
        <bgimage resource="Standard Button" />
        <label text="Cancel" />
    </widget>

</widget>

</widget_description>
