		resizable="no" configurable="yes">
		
		<frame x="50" y="50" width="430" height="500" border="yes" />
		<title resource="Blue Title" text="Stats and Skills" align="left" close_button="yes" />
		<bgimage resource="Skills Background" alpha="128" />
		
		
