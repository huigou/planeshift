<widget_description>
    <widget name="GmGUI" factory="pawsGmGUIWindow" style="topwindow">

        <frame x="0" y="0" width="630" height="425" />
        <title text="Game Master Options" />
        <bgimage resource="Grey Background" alpha="0" />

        <widget name="GM Tabs" factory="pawsTabWindow" style="tabwindow">
            <frame y="0" width="630" height="425" />
            <attachpoints>
                <attach point="ATTACH_RIGHT" />
                <attach point="ATTACH_TOP" />
                <attach point="ATTACH_LEFT" />
                <attach point="PROPORTIONAL_BOTTOM" />
            </attachpoints>
            <!-- Tabs -->
            <widget name="Players Button" factory="pawsButton" style="tabbutton" id="1000">
                <frame x="1" y="2" width="65" />
                <label text="Players" />
                <attachpoints>
                    <attach point="PROPORTIONAL_RIGHT" />
                    <attach point="ATTACH_LEFT" />
                </attachpoints>
            </widget>
            <widget name="Tournament Button" factory="pawsButton" style="tabbutton" id="1001" >
                <frame x="70" y="2" width="100" />
                <label text="Tournament" />
                <attachpoints>
                    <attach point="PROPORTIONAL_RIGHT" />
                    <attach point="PROPORTIONAL_LEFT" />
                </attachpoints>
            </widget>
            <widget name="Action Button" factory="pawsButton" style="tabbutton" id="1002">
                <frame x="175" y="2" width="75"  />
                <label text="Actions" />
                <attachpoints>
                    <attach point="PROPORTIONAL_RIGHT" />
                    <attach point="PROPORTIONAL_LEFT" />
                </attachpoints>
            </widget>
            <widget name="Attributes Button" factory="pawsButton" style="tabbutton" id="1003" >
                <frame x="255" y="2" width="75" />
                <label text="Attributes" />
                <attachpoints>
                    <attach point="ATTACH_RIGHT" />
                    <attach point="PROPORTIONAL_LEFT" />
                </attachpoints>
            </widget>
            <widget name="Player Controls" factory="pawsWidget" style="tabpanel" visible="no" id="1100">
                <frame x="0" y="25" width="620" height="397"  />
                <attachpoints>
                    <attach point="ATTACH_RIGHT" />
                    <attach point="PROPORTIONAL_TOP" />
                    <attach point="ATTACH_LEFT" />
                    <attach point="PROPORTIONAL_BOTTOM" />
                </attachpoints>
                <widget name="PlayerList" factory="pawsListBox" id="1201" style="listbox">
                    <frame x="4" y="5" width="480" height="352" border="yes"/>
                    <highlight resource="Hightlight" alpha="128" />
                    <columns height="20" headings="yes">
                    <column width="110" >
                        <widget name="First Name" factory="pawsTextBox"></widget>
                    </column>
                    <column width="105" >
                        <widget name="Last Name" factory="pawsTextBox"></widget>
                    </column>
                    <column width="20" >
                        <widget name="Gnd" factory="pawsTextBox"></widget>
                    </column>
                    <column width="120" >
                        <widget name="Guild" factory="pawsTextBox"></widget>
                    </column>
                    <column width="100" >
                        <widget name="Sector" factory="pawsTextBox"></widget>
                    </column>                
                    </columns>
                </widget>

                <widget name="RefreshPlayerList" factory="pawsButton" id="1298" style="button">
                    <frame x="4" y="375" width="130" height="20" />
                    <label text="Refresh List" />
                </widget>

                <widget name="PlayerCount" factory="pawsTextBox" >
                    <frame x="240" y="375" width="150" height="20"/>
                </widget>

                <widget name="SectorLbl" factory="pawsTextBox" style="label" >
                    <frame x="500" y="5" width="120" height="20"/>
                    <text string="Sector:" />
                </widget>
                <widget name="MoveTarget" factory="pawsTextBox" style="label" >
                    <frame x="525" y="37" width="30" height="20"/>
                    <text string="SL" horizAdjust="CENTRE" vertAdjust="CENTRE" />
                </widget>
                <widget name="TargetLeft" factory="pawsButton" toggle="no" id="1211" shadows="yes" >
                    <frame x="507" y="40" width="20" height="20" border="no" />
                    <buttonup resource="Left Arrow" />
                    <buttondown resource="Left Arrow" />
                </widget>
                <widget name="TargetRight" factory="pawsButton" toggle="no" id="1212" shadows="yes" >
                    <frame x="550" y="40" width="20" height="20" border="no" />
                    <buttonup resource="Right Arrow" />
                    <buttondown resource="Right Arrow" />
                </widget>
                <widget name="TargetForward" factory="pawsButton" toggle="no" id="1213" shadows="yes" >
                    <frame x="530" y="25" width="20" height="20" border="no" />
                    <buttonup resource="Up Arrow" />
                    <buttondown resource="Up Arrow" />
                </widget>
                <widget name="TargetBackwards" factory="pawsButton" toggle="no" id="1214" shadows="yes" >
                    <frame x="530" y="52" width="20" height="20" border="no" />
                    <buttonup resource="Down Arrow" />
                    <buttondown resource="Down Arrow" />
                </widget>
                <widget name="TargetUp" factory="pawsButton" toggle="no" id="1215" shadows="yes" >
                    <frame x="590" y="25" width="20" height="20" border="no" />
                    <buttonup resource="Up Arrow" />
                    <buttondown resource="Up Arrow" />
                </widget>
                <widget name="TargetDown" factory="pawsButton" toggle="no" id="1216" shadows="yes" >
                    <frame x="590" y="52" width="20" height="20" border="no" />
                    <buttonup resource="Down Arrow" />
                    <buttondown resource="Down Arrow" />
                </widget>

                <widget name="AidPet" factory="pawsButton" toggle="no" id="1210" style="button">
                    <frame x="490" y="80" width="120" height="20" />
                    <label text="Teleport To Player" />
                </widget>

                <widget name="KillWarn" factory="pawsTextBox" style="label" >
                    <frame x="490" y="105" width="120" height="20" />
                    <text string="!!!WARNING!!!" horizAdjust="CENTRE" vertAdjust="CENTRE" />
                </widget>  
                <widget name="Kill" factory="pawsButton" toggle="no" id="1233" style="button">
                    <frame x="490" y="125" width="120" height="20" />
                    <label text="Kill Player" />
                </widget>

                <widget name="Mute" factory="pawsButton" id="1231" style="button">
                    <frame x="490" y="160" width="120" height="20" />
                    <label text="Mute Player" />
                </widget>
                <widget name="Unmute" factory="pawsButton" id="1232" style="button">
                    <frame x="490" y="180" width="120" height="20" />
                    <label text="Unmute Player" />
                </widget>

                <widget name="ChangeName" factory="pawsButton" id="1234" style="button">
                    <frame x="490" y="220" width="120" height="20" />
                    <label text="Change name" />
                </widget>
                <widget name="ChangeNameRnd" factory="pawsButton" id="1235" style="button">
                    <frame x="490" y="240" width="120" height="20"  />
                    <label text="Random name" />
                </widget>

                <widget name="Kick" factory="pawsButton" id="1230" style="button">
                    <frame x="490" y="280" width="120" height="20" />
                    <label text="Kick Player" />
                </widget>

                <widget name="BanMin" factory="pawsEditTextBox">    
                    <frame x="500" y="310" width="25" height="20" border="no"/>
                    <text string="30" horizAdjust="CENTRE" />    
                </widget>
                <widget name="BanHrs" factory="pawsEditTextBox">    
                    <frame x="545" y="310" width="25" height="20" border="no"/>
                    <text string="0" horizAdjust="CENTRE" />    
                </widget>        
                <widget name="BanDays" factory="pawsEditTextBox">    
                    <frame x="590" y="310" width="24" height="20" border="no"/> 
                    <text string="0" horizAdjust="CENTRE" />    
                </widget>

                <widget name="BanMinlbl" factory="pawsTextBox" style="label">    
                    <frame x="490" y="314" width="20" height="20" />
                    <text string="M:" horizAdjust="CENTRE" />    
                </widget>
                <widget name="BanHrslbl" factory="pawsTextBox" style="label">    
                    <frame x="535" y="314" width="20" height="20" />
                    <text string="H:" horizAdjust="CENTRE" />    
                </widget>        
                <widget name="BanDayslbl" factory="pawsTextBox" style="label">    
                    <frame x="580" y="314" width="20" height="20" /> 
                    <text string="D:" horizAdjust="CENTRE" />    
                </widget>

                <widget name="Ban" factory="pawsButton" id="1236" style="button">
                    <frame x="490" y="330" width="120" height="20" />
                    <label text="Ban" />
                </widget>

            </widget>

            <widget name="Tournament Controls" factory="pawsWidget" style="tabpanel" visible="no" id="1101">
                <frame x="0" y="25" width="620" height="397" />
                <attachpoints>
                    <attach point="ATTACH_RIGHT" />
                    <attach point="PROPORTIONAL_TOP" />
                    <attach point="ATTACH_LEFT" />
                    <attach point="PROPORTIONAL_BOTTOM" />
                </attachpoints>
            </widget>

            <widget name="Action Controls" factory="pawsWidget" style="tabpanel" visible="no" id="1102">
                <frame x="0" y="25" width="620" height="397" />
                <attachpoints>
                    <attach point="ATTACH_RIGHT" />
                    <attach point="PROPORTIONAL_TOP" />
                    <attach point="ATTACH_LEFT" />
                    <attach point="PROPORTIONAL_BOTTOM" />
                </attachpoints>
                <widget name="ActionList" factory="pawsListBox" id="1265" style="listbox">
                    <frame x="4" y="5" width="555" height="335" border="yes"/>
                     <highlight resource="Hightlight" alpha="128" />
                    <columns height="24" headings="yes">
                        <column width="15" >
                            <widget name="Id" factory="pawsTextBox"></widget>
                        </column>
                        <column width="120" >
                            <widget name="Name" factory="pawsTextBox"></widget>
                        </column>
                        <column width="115" >
                            <widget name="Mesh" factory="pawsTextBox"></widget>
                        </column>
                        <column width="40" >
                            <widget name="Poly" factory="pawsTextBox"></widget>
                        </column>
                        <column width="125" >
                            <widget name="Pos" factory="pawsTextBox"></widget>
                        </column>
                        <column width="120" >
                            <widget name="Type" factory="pawsTextBox"></widget>
                        </column>                
                    </columns>
                </widget>

                <widget name="cmdRefresh" factory="pawsButton" id="1260" style="button">
                    <frame x="5" y="350" width="105" height="20" />
                    <label text="Refresh List" />
                </widget>

                <widget name="cmdReload" factory="pawsButton" id="1266" style="button">
                    <frame x="5" y="375" width="105" height="20" />
                    <label text="Reload Cache" />
                </widget>
                
                <widget name="cmdAdd" factory="pawsButton" id="1261" style="button">
                    <frame x="125" y="350" width="105" height="20" />
                    <label text="Add New" />
                </widget>
                
                <widget name="cmdAddLink" factory="pawsButton" id="1262" style="button">
                    <frame x="125" y="375" width="105" height="20"  />
                    <label text="Add Linked" />
                </widget>

                <widget name="cmdEdit" factory="pawsButton" id="1263" style="button">
                    <frame x="245" y="350" width="105" height="20" />
                    <label text="Edit" />
                </widget>

                <widget name="cmdDelete" factory="pawsButton" id="1264" style="button">
                    <frame x="245" y="375" width="105" height="20" />
                    <label text="Delete" />
                </widget>


            </widget>

                <!-- Tournament stuff should go here, please start the id's there with 40 -->

            <widget name="Attribute Controls" factory="pawsWidget" style="tabpanel" visible="no" id="1103">
                <frame x="0" y="25" width="620" height="397" />
                <attachpoints>
                    <attach point="ATTACH_RIGHT" />
                    <attach point="PROPORTIONAL_TOP" />
                    <attach point="ATTACH_LEFT" />
                    <attach point="PROPORTIONAL_BOTTOM" />
                </attachpoints>

                <widget name="listattributes" factory="pawsButton" toggle="no" id="1250" style="button">
                    <frame x="21" y="37" width="160" height="16" border="no" />
                    <label text="List Attributes" />
                </widget>
                <widget name="invincible" factory="pawsButton" toggle="no" id="1251" style="button">
                    <frame x="21" y="55" width="160" height="16" border="no" />
                    <label text="Toggle Invinciblity" />
                </widget>
                <widget name="invisible" factory="pawsButton" toggle="no" id="1252" style="button">
                    <frame x="21" y="73" width="160" height="16" border="no" />
                    <label text="Toggle Invisiblity" />
                </widget>
                <widget name="viewall" factory="pawsButton" toggle="no" id="1253" style="button">
                    <frame x="21" y="91" width="160" height="16" border="no" />
                    <label text="Toggle Seeing Invisibles" />
                </widget>
                <widget name="nevertired" factory="pawsButton" toggle="no" id="1254" style="button">
                    <frame x="21" y="109" width="160" height="16" border="no" />
                    <label text="Toggle Stamina" />
                </widget>
                <widget name="nofalldamage" factory="pawsButton" toggle="no" id="1255" style="button">
                    <frame x="21" y="127" width="160" height="16" border="no" />
                    <label text="Toggle Fall Damage" />
                </widget>
                <widget name="infiniteinventory" factory="pawsButton" toggle="no" id="1256" style="button">
                    <frame x="21" y="145" width="160" height="16" border="no" />
                    <label text="Toggle Infinite Inventory" />
                </widget>
                <widget name="questtester" factory="pawsButton" toggle="no" id="1257" style="button">
                    <frame x="21" y="163" width="160" height="16" border="no" />
                    <label text="Toggle Quest Test Mode" />
                </widget>
            </widget>
        </widget>
    </widget>
</widget_description>
