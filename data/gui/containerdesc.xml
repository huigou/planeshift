<widget_description>

    <widget name="ContainerDescWindow" factory="pawsContainerDescWindow" visible="no" movable="yes" savepositions="yes" style="New Standard GUI" resizable="yes" keepaspect="no">
        <frame x="100" y="100" width="300" height="365" border="yes"/>
            <minframe width="300" height="365" />
            <maxframe width="300" height="558" />
        <title resource="Scaling Title Bar" text="Container" align="left" close_button="yes"/>
        <!-- Name and name edit widgets -->
        <frame x="70" y="10" width="390" height="40" r="40" g="30" b="0" border="yes"/>
        <widget name="EditItemName" factory="pawsEditTextBox" >
            <frame x="76" y="10" width="150" height="25" border="yes"/>
        </widget>
        <widget name="ItemName" factory="pawsTextBox">
            <frame x="76" y="10" width="150" height="25" border="yes"/>
        </widget>
        
        <pawsButton name="EnableEditName" id="100" style="Standard Button" visible="yes">
          <frame x="230" y="10" width="60" height="30" />
          <label text="Rename"/>
        </pawsButton>
        <pawsButton name="SendEditName" id="110" style="Standard Button" visible="yes">
          <frame x="230" y="10" width="60" height="30" />
          <label text="Save"/>
        </pawsButton>

        <widget name="UseContainer" factory="pawsButton" id="12" tooltip="Use the container">
            <frame x="10" y="70" width="48" height="48" />
            <bgimage resource="ButtonPush" />
        </widget>

        <widget name="Combine" factory="pawsButton" id="13" tooltip="Combine items in container">
            <frame x="10" y="120" width="48" height="48" />
            <bgimage resource="ButtonCombine" />
        </widget>

        <widget name="TakeStackAll" factory="pawsButton" tooltip = "Take and Stack All">
            <frame x="10" y="160" width="48" height="48" />
            <bgimage resource="ButtonPickup" />
        </widget>

        <widget name="TakeAll" factory="pawsButton" tooltip = "Take All">
            <frame x="10" y="210" width="48" height="48" />
            <bgimage resource="ButtonPickup" />
        </widget>

        <widget name="SmallInvButton" factory="pawsButton" tooltip="Open Inventory">
            <frame x="10" y="260" width="48" height="48"/>
            <bgimage resource="InventoryBulk" alpha="0"/>
        </widget>

        <widget name="Inventory" factory="pawsButton" id="12" tooltip="Transfer to inventory">
            <frame x="10" y="310" width="48" height="48" />
            <bgimage resource="ExchangeAccept" />
        </widget>

        <widget name="ItemImage" factory="pawsWidget" visible="yes" >
            <frame x="10" y="30" width="48" height="48" border="no"/>
        </widget>
        <widget name="ItemDescription" factory="pawsMultiLineTextBox" >
            <frame x="80" y="45" width="210" height="100" border="no"/>
        </widget>





        <widget name="BulkList" factory="pawsListBox" selectable="0">
            <frame x="82" y="160" width="205" height="192" border="no"/>
            <columns height="48" headings="no" >
                <column width="48" >
                    <widget name="Bulk0" factory="pawsSlot">
                        <frame x="0" y="0" width="48" height="48" />
                    </widget>
                </column>
                <column width="48" >
                    <widget name="Bulk1" factory="pawsSlot">
                        <frame x="0" y="0" width="48" height="48" />
                    </widget>
                </column>
                <column width="48" >
                    <widget name="Bulk2" factory="pawsSlot">
                        <frame x="0" y="0" width="48" height="48" />
                    </widget>
                </column>
                <column width="48" >
                    <widget name="Bulk3" factory="pawsSlot">
                        <frame x="0" y="0" width="48" height="48" />
                    </widget>
                </column>
